class Solution {
public:
    int reverse(int x) {
        return solution1(x);
    }
private:
    int solution1(int x){
        long result = 0, tmp = abs((long)x);
        long op = x > 0 ? 1 : -1;
        while(tmp){
            result = result * 10 + tmp % 10;
            tmp /= 10;
        }
        return result > INT_MAX ? 0 : result * op;
    }
};
