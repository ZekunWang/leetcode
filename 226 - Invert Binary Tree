/*
Invert a binary tree.

     4
   /   \
  2     7
 / \   / \
1   3 6   9
to
     4
   /   \
  7     2
 / \   / \
9   6 3   1
Trivia:
This problem was inspired by this original tweet by Max Howell:
Google: 90% of our engineers use the software you wrote (Homebrew), but you canâ€™t invert 
a binary tree on a whiteboard so fuck off.
*/
/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    TreeNode* invertTree(TreeNode* root) {
        return solution1(root);
    }
private:
    TreeNode *solution1(TreeNode *root){
        if(!root) return NULL;
        TreeNode *tmp = solution1(root->left);
        root->left = solution1(root->right);
        root->right = tmp;
        return root;
    }
};
